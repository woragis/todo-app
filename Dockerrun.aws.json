{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "woragis/todo-frontend",
      "hostname": "frontend",
      "essential": false,
      "memory": 128
    },
    {
      "name": "backend",
      "image": "woragis/todo-backend",
      "hostname": "backend",
      "essential": false,
      "memory": 128
    },
    {
      "name": "database",
      "image": "woragis/todo-database",
      "hostname": "database",
      "essential": true,
      "memory": 128
    },
    {
      "name": "cache",
      "image": "woragis/todo-cache",
      "hostname": "cache",
      "essential": true,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "woragis/todo-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["frontend", "backend"]
    }
  ]
}
