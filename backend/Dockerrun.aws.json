{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "todos-backend",
      "image": "woragis/todos-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgres://postgres:password@your-rds-endpoint:5432/todos?sslmode=disable"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://your-redis-endpoint:6379"
        }
      ]
    }
  ]
}
